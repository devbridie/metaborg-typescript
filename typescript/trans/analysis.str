module analysis

imports
  
  nabl2/api
  nabl2/runtime

  static-semantics
  
  statixruntime
  tstatix
  
  pp
  
  desugaring/desugar
  disamb

rules // Analysis
//  editor-analyze = stx-editor-analyze(disamb-all ; desugar-all|"typechecking/typescript", "projectOk", "fileOk")
  editor-analyze: a -> s
    where
      s := <stx-editor-analyze(disamb-all ; desugar-all|"typechecking/typescript", "main")> a


rules // Debugging

  // Prints the analyzed annotated abstract syntax ATerm of a selection.
  debug-show-analyzed: (selected, _, _, path, project-path) -> (filename, result)
    with filename := <guarantee-extension(|"analyzed.aterm")> path
       ; result   := <disamb-all> selected
