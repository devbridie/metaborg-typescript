context-free syntax

  Literal = NullLiteral
  Literal = UndefinedLiteral
  Literal = BooleanLiteral
  Literal = NumericLiteral
  Literal = StringLiteral
  
  NullLiteral.NullLiteral = "null"
  UndefinedLiteral.UndefinedLiteral = "undefined"
  
  BooleanLiteral.TrueLiteral = "true"
  BooleanLiteral.FalseLiteral = "false"
  
  NumericLiteral.NumericLiteral = INT
  StringLiteral.StringLiteral = STRING
  
lexical restrictions

  // Ensure greedy matching for lexicals
  
  CommentChar     -/- [\/]
  INT             -/- [0-9]
  ID              -/- [a-zA-Z0-9\_]
  "true" "false"  -/- [a-zA-Z0-9\_]
  
  // EOF may not be followed by any char
  
  EOF             -/- ~[]
  
  // Backslash chars in strings may not be followed by " 
  
  BackSlashChar -/- [\"]

context-free restrictions

  // Ensure greedy matching for comments
  
  LAYOUT? -/- [\ \t\n\r]
  LAYOUT? -/- [\/].[\/]
  LAYOUT? -/- [\/].[\*]
